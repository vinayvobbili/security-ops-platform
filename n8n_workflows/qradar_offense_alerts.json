      "id": "get-dest-ips",
      "name": "Get Destination IPs",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1340, 300],
      "credentials": {
        "httpHeaderAuth": {
          "id": "qradar-api-token",
          "name": "QRadar API Token"
        }
