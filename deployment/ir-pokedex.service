[Unit]
Description=Pokedex SOC Assistant Bot
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=10
User=vinay
WorkingDirectory=/home/vinay/pub/IR
ExecStart=/home/vinay/pub/IR/.venv/bin/python /home/vinay/pub/IR/webex_bots/pokedex.py
StandardOutput=append:/home/vinay/pub/IR/logs/pokedex.log
StandardError=append:/home/vinay/pub/IR/logs/pokedex.log

# Resource limits - Pokedex uses LLM so needs more memory
MemoryMax=4G
CPUQuota=200%

# Restart policy
RestartSec=10
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
