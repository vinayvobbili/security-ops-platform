# Sudoers rules for IR Bot Status API self-restart
# Install: sudo cp /home/user/pub/IR/deployment/sudoers-ir-bot-status-api /etc/sudoers.d/ir-bot-status-api && sudo chmod 440 /etc/sudoers.d/ir-bot-status-api

user ALL=(ALL) NOPASSWD: /usr/bin/systemctl restart ir-bot-status-api.service
user ALL=(ALL) NOPASSWD: /usr/bin/systemctl stop ir-bot-status-api.service
user ALL=(ALL) NOPASSWD: /usr/bin/systemctl start ir-bot-status-api.service
