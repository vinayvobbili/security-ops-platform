[Unit]
Description=Log Viewer - Barnacles
After=network-online.target ir-barnacles.service
Wants=network-online.target

[Service]
Type=simple
User=iruser
Group=iruser
WorkingDirectory=/opt/incident-response
EnvironmentFile=/opt/incident-response/.env

# Start log viewer for Barnacles bot
ExecStart=/opt/incident-response/.venv/bin/python deployment/log_viewer.py --port 8036 --title "Barnacles Bot" --file /opt/incident-response/logs/barnacles.log

Restart=on-failure
RestartSec=10

StandardOutput=journal
StandardError=journal
SyslogIdentifier=ir-log-viewer-barnacles

[Install]
WantedBy=multi-user.target
