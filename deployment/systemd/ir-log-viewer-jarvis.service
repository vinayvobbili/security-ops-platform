[Unit]
Description=Log Viewer - Jarvis
After=network-online.target ir-jarvis.service
Wants=network-online.target

[Service]
Type=simple
User=user
Group=user
WorkingDirectory=/home/user/pub/IR
EnvironmentFile=/home/user/pub/IR/.env

# Kill any orphan process using this port before starting
ExecStartPre=-/bin/bash -c 'fuser -k 8035/tcp 2>/dev/null || true'

# Start log viewer for Jarvis bot
ExecStart=/home/user/pub/IR/.venv/bin/python deployment/log_viewer.py --port 8035 --title "Jarvis Bot" --file /home/user/pub/IR/logs/jarvis.log

Restart=on-failure
RestartSec=10

StandardOutput=journal
StandardError=journal
SyslogIdentifier=ir-log-viewer-jarvis

[Install]
WantedBy=multi-user.target
