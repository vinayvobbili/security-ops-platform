[Unit]
Description=IR Jarvis Bot
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=user
Group=user
WorkingDirectory=/home/user/pub/IR
Environment="PYTHONPATH=/home/user/pub/IR"
ExecStartPre=-/usr/bin/pkill -f "webex_bots/jarvis.py"
ExecStart=/home/user/pub/IR/.venv/bin/python webex_bots/jarvis.py

# Restart on failure
Restart=on-failure
RestartSec=30

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ir-jarvis

# Resource limits
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
