[Unit]
Description=IR Jarvis Bot
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=vinay
Group=vinay
WorkingDirectory=/opt/incident-response
Environment="PYTHONPATH=/opt/incident-response"
ExecStart=/opt/incident-response/.venv/bin/python webex_bots/jarvis.py

# Restart on failure
Restart=on-failure
RestartSec=30

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ir-jarvis

# Resource limits
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
