[Unit]
Description=Log Viewer - TARS
After=network-online.target ir-tars.service
Wants=network-online.target

[Service]
Type=simple
User=user
Group=user
WorkingDirectory=/home/user/pub/IR
EnvironmentFile=/home/user/pub/IR/.env

# Kill any orphan process using this port before starting
ExecStartPre=-/bin/bash -c 'fuser -k 8038/tcp 2>/dev/null || true'

# Start log viewer for TARS bot
ExecStart=/home/user/pub/IR/.venv/bin/python deployment/log_viewer.py --port 8038 --title "TARS Bot" --file /home/user/pub/IR/logs/tars.log

Restart=on-failure
RestartSec=10

StandardOutput=journal
StandardError=journal
SyslogIdentifier=ir-log-viewer-tars

[Install]
WantedBy=multi-user.target
