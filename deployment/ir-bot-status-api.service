[Unit]
Description=IR Bot Status API
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=10
User=user
WorkingDirectory=/home/user/pub/IR
Environment="PATH=/home/user/pub/IR/.venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
EnvironmentFile=/home/user/pub/IR/.env
ExecStart=/home/user/pub/IR/.venv/bin/python /home/user/pub/IR/deployment/bot_status_api.py
StandardOutput=append:/home/user/pub/IR/logs/bot_status_api.log
StandardError=append:/home/user/pub/IR/logs/bot_status_api.log

# Resource limits
MemoryMax=512M
CPUQuota=100%

# Restart policy
RestartSec=10
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
