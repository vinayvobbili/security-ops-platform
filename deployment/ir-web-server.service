[Unit]
Description=IR Web Server (Flask Dashboard)
After=network.target

[Service]
Type=simple
User=user
WorkingDirectory=/home/user/pub/IR
Environment="PATH=/home/user/pub/IR/.venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
Environment="SKIP_POKEDEX_WARMUP=true"
ExecStart=/home/user/pub/IR/.venv/bin/python /home/user/pub/IR/web/web_server.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
